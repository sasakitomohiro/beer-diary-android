<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/bottom_navigation_graph"
  app:startDestination="@id/navigation_home"
  >

  <custom_fragment
    android:id="@+id/navigation_home"
    android:name="monster.sasakisan.beer_diary_android.ui.home.HomeFragment"
    android:label="ホーム"
    app:defaultNavHost="true"
    tools:layout="@layout/fragment_home"
    >
    <action
      android:id="@+id/action_home_to_search"
      app:destination="@id/navigation_search"/>
  </custom_fragment>

  <custom_fragment
    android:id="@+id/navigation_settings"
    android:name="monster.sasakisan.beer_diary_android.ui.home.SettingsFragment"
    android:label="設定"
    tools:layout="@layout/fragment_settings"
    />

  <custom_fragment
    android:id="@+id/navigation_search"
    android:name="monster.sasakisan.beer_diary_android.ui.search.SearchFragment"
    android:label="検索"
    tools:layout="@layout/fragment_search"
    >
    <action
      android:id="@+id/action_search_to_home"
      app:destination="@id/navigation_home"
      />
  </custom_fragment>
</navigation>
